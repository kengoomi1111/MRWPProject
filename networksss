import networkx as nx
import random
import matplotlib.pyplot as plt


G = nx.binomial_graph(10, 0.3, directed=True)
nx.draw(G)

# Setting threshold.
threshold = 3

def add_random_edge(G=G):
    origin_node = random.choice(G.nodes)
    potential_node_list = [node for node in G.nodes if node not in [n for _, n in G.edges(origin_node)] and node != origin_node]
    target_node = random.choice(potential_node_list)

add_random_edge()
for node in G.nodes:
    if G.in_degree(node) > threshold:
        print('*dies*')

plt.show()
